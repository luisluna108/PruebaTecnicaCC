@model DAL.Model.Materias

@{
    ViewBag.Title = "Detalles Materia";
}

<style>
    .opcionesAlumno{
        display: none;
        visibility: hidden;
    }
</style>

<h2> Detalles de la Materia @Html.DisplayFor(model => model.Nombre)</h2>

<div>
    <hr />
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaInscripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("FechaInscripcion", Model.FechaInscripcion, "{0:yyyy-MM-dd}", new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DuracionCurso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="input-group">
                    @Html.EditorFor(model => model.DuracionCurso, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    <span class="input-group-addon">Meses</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FinalCurso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("FinalCurso", Model.FinalCurso, "{0:yyyy-MM-dd}", new { @class = "form-control", @disabled = "disabled" })
            </div>
        </div>
    </div>
</div>
<hr />
<h3>Alumnos cursando la materia de @Html.DisplayFor(model => model.Nombre)</h3>
<br />
<table class="table table-responsive table-bordered table-striped" id="AlumnoTable">
    <thead>
        <tr>
            <th></th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Fecha Nacimiento</th>
            <th>Genero</th>
            <th></th>
            <th>Acciones</th>
        </tr>
    </thead>
</table>
<p>
    <a href="@Url.Action("Index", "Materias")" class="btn btn-danger"><i class="fas fa-arrow-left"></i> Regresar</a>
</p>
