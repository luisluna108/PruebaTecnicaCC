@model DAL.Model.Materias

@{
    ViewBag.Title = "Crear Materia";
}

<h2>Crear Materia</h2>


<form autocomplete="off">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Nombre, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaInscripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="input-group">
                    @Html.EditorFor(model => model.FechaInscripcion, new { htmlAttributes = new { @class = "form-control" } })
                    <div class="input-group-addon">
                        <i class="fas fa-calendar"></i>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.FechaInscripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DuracionCurso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="input-group">
                    @Html.EditorFor(model => model.DuracionCurso, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="input-group-addon">Meses</span>
                </div>
                @Html.ValidationMessageFor(model => model.DuracionCurso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FinalCurso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                <div class="input-group">
                    @Html.EditorFor(model => model.FinalCurso, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                    <div class="input-group-addon">
                        <i class="fas fa-calendar"></i>
                    </div>
                </div>
                @Html.ValidationMessageFor(model => model.FinalCurso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="@Url.Action("Index", "Materias")" class="btn btn-danger"><i class="fas fa-arrow-left"></i> Cancel</a>
                @*<button onclick="SaveMateria()" class="btn btn-success"><i class="fas fa-save"></i> Crear</button>*@
                <input type="button" onclick="SaveMateria()" class="btn btn-success" value="Crear" />

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
